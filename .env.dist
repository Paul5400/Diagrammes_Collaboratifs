# ================================
# Configuration Générale
# ================================
NODE_ENV=development
PORT=3001

# ================================
# Ports des services
# ================================
FRONTEND_PORT=3003
BACKEND_PORT=3002
POSTGRES_PORT=5432
REDIS_PORT=6379
ADMINER_PORT=8080

# ================================
# PostgreSQL Configuration
# ================================
POSTGRES_DB=diagrammer
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@diagrammer.db:5432/diagrammer?schema=public

# ================================
# Auth / JWT / OAuth
# ================================
# Remplacez ces valeurs par celles de votre application GitHub (ou définissez-les dans .env local)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:${BACKEND_PORT:-3002}/auth/github/callback

# Clé pour signer les JWT (en prod: utiliser une valeur forte et stockée en secret)
JWT_SECRET=change_this_dev_secret

# URL front pour redirection après login
FRONTEND_URL=http://localhost:${FRONTEND_PORT:-3003}
# URL backend utilisée par le Front (public car injectée côté client)
NEXT_PUBLIC_BACKEND_URL=http://localhost:${BACKEND_PORT:-3002}
